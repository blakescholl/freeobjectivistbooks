/****************************************************************************************************/
/* Main */

body {
    font-family: georgia, serif;
    background: url(background.jpg);
}

h1, h2, h3, h4, h5, h6 {
    line-height: 1.25;
    margin-top: 20px;
    margin-bottom: 0px;
}

h1, h2, h3, h4, h5, h6, th, label, .header {
    font-family: 'gill sans', helvetica, sans-serif;
    font-weight: normal;
}

h1 {
    font-size: 3em;
}

p {
    line-height: 1.4;
    margin-bottom: 6px;
}

label {
    font-size: 1.1em;
}

/****************************************************************************************************/
/* Links */

a {
    color: #0A1E89;
}

a:active {
    color: #1636EC;
}

/****************************************************************************************************/
/* General styling */

.overview {
    font-size: 1.4em;
    margin-bottom: 24px;
}

.title {
    font-style: italic;
}

.hr {
    height: 1px;
    padding: 12px 0;
}

.headline {
    font-weight: bold;
}

.tagline {
    color: #006000;
}

.reason {
    margin-top: 6px;
    margin-bottom: 6px;
}

.timestamp {
    color: #707070;
}

.flagged {
    color: #d80000;
}

.warning {
    color: #d80000;
    font-weight: bold;
}

.more {
    margin-top: 24px;
}

.fixed {
    position: fixed;
}

.money {
    color: #006000;
    font-weight: bold;
}

/****************************************************************************************************/
/* Header */

.header {
    background-color: #16711f;
    height: 40px;
    color: white;
    padding-left: 10px;
}

.header a {
    color: white;
}

.header .home {
    font-size: 2em;
    text-decoration: none;
}

.header .topnav {
    float: right;
    font-size: 1.1em;
    margin: 10px;
}

/****************************************************************************************************/
/* Footer */

.footer {
    text-align: center;
    color: #787878
}

.footer a {
    color: #787878
}

/****************************************************************************************************/
/* Flash */

.flash {
    margin-top: 24px;
}

.flash :last-child {
    margin-bottom: 0;
}

/****************************************************************************************************/
/* Message boxes */

.message {
    border: 2px solid;
    background-position: 6px 4px;
    background-repeat: no-repeat;
    margin-bottom: 12px;
}

.message.error {
    border-color: #940e0a;
    background-color: #ffbcbd;
    background-image: url(<%= asset_path 'error-icon.png' %>);
}

.message.notice {
    border-color: #16711f;
    background-color: #b4fcbc;
    background-image: url(<%= asset_path 'notice-icon.png' %>);
}

.message p, .message ul, .message ol {
    padding: 4px 12px 4px 30px;
    margin-bottom: 0;
}

.message .headline {
    font-family: 'gill sans', helvetica, sans-serif;
    font-weight: normal;
    font-size: 1.2em;
}

/****************************************************************************************************/
/* Sidebar */

.sidebar img {
    vertical-align: top;
}

.sidebar .top {
    background-image: url(<%= asset_path 'content-bg-220-top.png' %>);
}

.sidebar .bottom {
    background-image: url(<%= asset_path 'content-bg-220-bottom.png' %>);
}

.sidebar .content {
    padding: 0 24px;
    background-image: url(<%= asset_path 'content-bg-220-middle.png' %>);
}

.sidebar .top_5 {
    background-image: url(<%= asset_path 'content-bg-280-top.png' %>);
}

.sidebar .bottom_5 {
    background-image: url(<%= asset_path 'content-bg-280-bottom.png' %>);
}

.sidebar .content_5 {
    padding: 0 24px;
    background-image: url(<%= asset_path 'content-bg-280-middle.png' %>);
}

.sidebar h2 {
    margin-top: 0;
}

.sidebar p {
    margin: 0;
    padding: 4px 0;
}

.sidebar ul {
    margin-bottom: 0;
}

.sidebar.login h2 {
    font-size: 1.6em;
}

.sidebar.login p {
    font-size: 1.2em;
}

.sidebar.feedback h2 {
    font-size: 1.4em;
}

.sidebar.feedback p {
    font-size: 1.0em;
}

/****************************************************************************************************/
/* Buttons */

.button {
    border: 0;
    background-repeat: no-repeat;
    background-position-y: top;
    background-color: transparent;
}

.button:active {
    background-position-y: bottom;
}

.button.cancel {
    height: 46px;
    background-image: url(<%= asset_path 'cancel-button.png' %>);
}

.button.delete {
    height: 56px;
    background-image: url(<%= asset_path 'delete-button.png' %>);
}

.button.donation-send {
    height: 36px;
    background-image: url(<%= asset_path 'donation-send-button.png' %>);
}

.button.donation-pay {
    height: 36px;
    background-image: url(<%= asset_path 'donation-pay-button.png' %>);
}

.button.edit {
    height: 56px;
    background-image: url(<%= asset_path 'edit-button.png' %>);
}

.button.flag {
    height: 46px;
    background-image: url(<%= asset_path 'flag-button.png' %>);
}

.button.pay-for-all {
    height: 36px;
    min-width: 140px;
    background-image: url(<%= asset_path 'pay-for-all-button.png' %>);
}

.button.pay-for-selected {
    height: 36px;
    min-width: 140px;
    background-image: url(<%= asset_path 'pay-for-selected-button.png' %>);
}

.button.pledge {
    height: 46px;
    background-image: url(<%= asset_path 'pledge-button.png' %>);
}

.button.send {
    height: 46px;
    background-image: url(<%= asset_path 'send-button.png' %>);
}

.button.send-payment {
    height: 46px;
    background-image: url(<%= asset_path 'send-payment-button.png' %>);
}

.button.sent {
    height: 46px;
    background-image: url(<%= asset_path 'sent-button.png' %>);
}

.button.update {
    height: 46px;
    background-image: url(<%= asset_path 'update-button.png' %>);
}

/****************************************************************************************************/
/* Thank-you */

.thankyou img {
    width: 100%;
    border: 1px solid #c8c8c8;
}

.thankyou .text {
    margin-bottom: 5px;
}

.thankyou .attribution {
    color: #006000;
    margin-bottom: 1px;
}

/****************************************************************************************************/
/* Testimonial */

.testimonial .text {
    padding-top: 12px;
    font-size: 1.2em;
}

.testimonial .tagline {
    text-align: right;
}

.testimonial .permalink {
    text-align: right;
}

.testimonial .permalink a {
    color: #707070;
    text-decoration: underline;
}

.testimonial .quote {
    float: right;
}

/****************************************************************************************************/
/* Errors */

.errorExplanation, .field_with_errors {
    color: #d80000;
}

div.field_with_errors {
    display: inline;
}

div.errorExplanation {
    border: 1px solid #d80000;
    margin-top: 20px;
    padding: 6px 12px;
}

.errorExplanation h2 {
    margin-top: 0;
}

.errorExplanation ul {
    font-family: 'gill sans', helvetica, sans-serif;
    margin-bottom: 0;
}

<div class="request">
    <div class="headline">
        <%= link_to request.user.name, admin_user_path(request.user) %> (<%= request.user.email %>) wants
        <span class="title"><%= request.book %></span>
    </div>
    <div class="tagline"><%= user_tagline request.user %></div>
    <div class="reason"><%= request.reason %></div>
    <p class="donor">
        <% if request.donor %>
        Donor: <%= link_to request.donor.name, admin_user_path(request.donor) %> in <%= request.donor.location %>
        <% else %>
        No donor yet
        <% end %>
    </p>
    <% if request.flagged %>
    <p class="flagged">
        <% if request.address.blank? %>
        Missing address flagged
        <% else %>
        Shipping info flagged: "<%= request.flag_message %>"
        <% end %>
    </p>
    <% end %>
    <div class="timestamp"><%= l request.created_at %></div>
</div>
<div class="clear"></div>

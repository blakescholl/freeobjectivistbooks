<% content_for :stylesheet do %>
<style>
.name {
    margin-bottom: 0;
}

.back {
    margin-top: 24px;
}

.sidebar {
    margin-top: 24px;
}
</style>
<% end %>

<h1 class="grid_16"><%= link_to @request.user.name, admin_user_path(@request.user) %> wants
    <span class="title"><%= @request.book %></span>
</h1>

<div class="request grid_12">
    <p class="tagline"><%= user_tagline @request.user %></p>
    <p class="reason"><%= format_block @request.reason %></p>

    <h2>Ship to</h2>
    <p class="name"><%= @request.user.name %></p>
    <p class="address"><%= format_address @request.address %></p>

    <% if @request.flagged? %>
    <p class="flagged">
        <% if @request.address.present? %>
        Shipping info flagged
        <% else %>
        Student has been contacted to add address
        <% end %>
    </p>
    <% end %>

    <% if @request.sent? %>
    <h2>Status: Book sent</h2>
    <p class="status"><%= @request.donor.name %> in <%= @request.donor.location %> has sent this book.</p>
    <% elsif @request.granted? %>
    <h2>Status: Donor found</h2>
    <p class="status"><%= link_to @request.donor.name, admin_user_path(@request.donor) %> in <%= @request.donor.location %>
        will donate this book.
    </p>
    <p class="thanked"><% if @request.thanked? %>Thank-you sent<% else %>Not thanked yet<% end %></p>
    <% else %>
    <h2>Status: Looking for donor</h2>
    <p class="status">We are looking for a donor for this book.</p>
    <% end %>

    <h2>Events</h2>
    <%= render partial: "admin/events/event", collection: @request.events.order(:created_at), spacer_template: "requests/spacer" %>
</div>
<div class="clear"></div>

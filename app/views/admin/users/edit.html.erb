<% content_for :title do %>Edit User â€“ Admin<% end %>

<% content_for :stylesheet do %>
<style>
.submit {
    height: 46px;
    margin-top: 24px;
    background-image: url(<%= asset_path 'update-button.png' %>);
}
</style>
<% end %>

<h1 class="grid_16">Edit user</h1>

<% if @user.errors.any? %>
<div class="grid_12 message error">
    <p class="headline">There were problems with your signup</p>
    <p class="detail">Please see below and make corrections.</p>
</div>
<% end %>

<div class="grid_12">
<%= form_for [:admin, @user] do |f| %>
    <h2>Public profile</h2>

    <%= render partial: "profiles/profile_fields", locals: {form: f, user: @user, type: @type} %>

    <h2>Private account info</h2>

    <%= f.label :email, class: "grid_5 alpha" %><div class="clear"></div>
    <%= f.email_field :email, class: "grid_5 alpha" %>
    <span class="grid_4 field_with_errors"><%= @user.errors[:email].join(", ") %></span>
    <div class="clear"></div>

    <%= f.label :address, class: "grid_5 alpha" %><div class="clear"></div>
    <%= f.text_area :address, class: "grid_5 alpha", rows: 5 %>
    <p class="grid_4 field_with_errors"><%= @user.errors[:address].join(", ") %></p>
    <div class="clear"></div>

    <%= f.submit "", class: "grid_4 alpha submit button" %><div class="clear"></div>
<% end %>
</div>

<% content_for :title do %>Flag Request<% end %>

<% content_for :stylesheet do %>
<style>
.request {
    margin-top: 24px;
}

.request p {
    font-size: 1.2em;
    margin-top: 0;
    margin-bottom: 0;
}

.submit {
    height: 46px;
    margin-top: 24px;
    background-image: url(<%= asset_path 'flag-button.png' %>);
    background-position-x: left;
}
 </style>
<% end %>

<h1 class="grid_16">Flag shipping info</h1>

<div class="request grid_12">
    <p class="name"><%= @flag.student %></p>
    <p class="address"><%= format_address @flag.address %></p>

    <%= form_for @flag, url: donation_flag_path(@donation) do |f| %>
        <h2>What is the problem?</h2>

        <p>We'll send your message to <%= @flag.student %> and ask them to fix it:</p>
        <p class="field_with_errors"><%= @flag.errors[:message].join(", ") %></p>
        <%= f.text_area :message, rows: 6, cols: 60 %>
        <div class="clear"></div>

        <%= hidden_field_tag :redirect, params[:redirect] %>

        <%= f.submit "", class: "grid_3 alpha submit button" %><div class="clear"></div>
    <% end %>
</div>

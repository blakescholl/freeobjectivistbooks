<div class="fulfillment">
    <%= render "requests/spacer" %>
    <div class="grid_6 alpha donation">
        <p class="headline"><%= title fulfillment.book %> to <%= fulfillment.student %></p>
        <p>On behalf of <%= fulfillment.donor %></p>
    </div>
    <div class="grid_6 omega actions">
        <% if fulfillment.new_record? %>
        <%= form_for fulfillment, url: donation_fulfillment_path(fulfillment.donation) do |f| %>
            <%= f.submit "", class: "grid_3 alpha omega button send" %>
        <% end %>
        <div class="clear"></div>
        <% elsif fulfillment.needs_sending? %>
        <%= link_to fulfillment do %><div class="grid_3 alpha omega button send"></div><% end %>
        <div class="clear"></div>
        <% end %>
        <% if fulfillment.user == @current_user %>
        <p><%= link_to "See all details for this request", fulfillment.request %></p>
        <% end %>
    </div>
    <div class="clear"></div>
</div>

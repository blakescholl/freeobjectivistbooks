<% content_for :stylesheet do %>
<style>
.request, .pledge, .actions {
    margin-top: 8px;
    margin-bottom: 8px;
}

.name {
    margin-bottom: 0;
}

.notes {
    margin-top: 12px;
}
</style>
<% end %>

<h1 class="grid_16">Your donations</h1>

<div class="grid_12">
    <% if @current_user.donations.any? %>
    <%= render partial: "donation", collection: @current_user.donations, spacer_template: "requests/spacer" %>
    <%= render partial: "requests/spacer" %>
    <%= render "donation_notes" %>
    <% else %>
    <p>None yet. <%= link_to 'Find students to donate books to', donate_path %></p>
    <% end %>
</div>
<div class="clear"></div>

<% content_for :title do %>Login<% end %>

<h1 class="grid_16">Log in</h1>

<%= form_tag login_path do %>
    <% if flash[:error] %>
    <div class="grid_8">
        <span class="field_with_errors"><%= flash[:error] %></span>
        <%= mail_to "jason@rationalegoist.com", "Forgot your password?", subject: "I forgot my password",
            body: "I forgot my password to freeobjectivistbooks.org for email address #{params[:email]}." %>
    </div>
    <div class="clear"></div>
    <% end %>

    <%= label_tag :email, "Email", class: "grid_1" %>
    <%= text_field_tag :email, params[:email], class: "grid_4" %>
    <div class="clear"></div>

    <%= label_tag :password, "Password", class: "grid_1" %>
    <%= password_field_tag :password, nil, class: "grid_4" %>
    <div class="clear"></div>

    <%= hidden_field_tag :destination, @destination %>

    <div class="grid_1">&nbsp;</div>
    <%= submit_tag "Log in", class: "grid_2" %>
    <div class="clear"></div>
<% end %>
